<div id="section-about" class="section">
    <div class="container">
        <div class="p-t-60 p-b-50 ">
            <div class="row feature-list">
                <div class="col-md-4 text-center">
                    <h4 class="custom-font title">CRAWLED PAGES</h4>
                    <h1 class="custom-font"><span class="number-animator" data-value="{{ pagesCount }}" data-animation-duration="800">0</span></h1>
                    <div class="col-md-8 col-md-offset-2">
                        <div class="progress transparent progress-small no-radius ">
                            <div class="progress-bar progress-bar-black animated-progress-bar " data-percentage="100%"></div>
