{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form _self %}

{% block fos_user_content %}
    <section class="content-20 v-center bg-gray first-section">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <h3>Register your account today</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        {% if not form.vars.valid %}
                            <div class="alert alert-danger" role="alert">
                                Please fill out a form correctly.
                            </div>
                        {% endif %}

                        <div class="signup-form">
                            <form role="form"
                                  action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }}
                                  method="POST" class="clearfix" style="width: 100%;">
                                <div class="form-group">
                                    {{ form_row(form.firstName, { 'label': 'Name' }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.email, { 'label': 'Email' }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.plainPassword, { 'label': 'Password' }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.termsOfUseAgreement, {'label': 'I accept terms of use'}) }}

                                    <a href="{{ path('page_disclaimer') }}">
                                        Read here &raquo;
                                    </a>
                                </div>
                                <button class="btn btn-huge btn-info">{{ 'registration.submit'|trans }}</button>
                                {{ form_rest(form) }}
                            </form>
                        </div>

                        <h6 class="p-t-40 p-b-20 text-center">or sign up with external account</h6>
                        {% include "WebDNAUserBundle:Registration:OAuthResourceOwners.html.twig" %}
                    </div>

                    {% include "WebDNAUserBundle:Registration:features.html.twig" %}

                </div>
            </div>
        </div>
    </section>
{% endblock %}
