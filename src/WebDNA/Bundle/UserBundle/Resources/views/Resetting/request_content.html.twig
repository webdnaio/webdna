{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <section class="content-20 v-center bg-gray first-section">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <h3>Reset your password</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="signup-form">
                            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="clearfix" style="width: 100%;">
                                <div class="form-group {% if invalid_username is defined %}has-error{% endif %}">
                                    <label for="username">Email address:</label>
                                    <input class="form-control" type="text" id="username" name="username" required="required" />
                                    {% if invalid_username is defined %}
                                        <span class="help-block">
                                            <ul class="list-unstyled">
                                                <li><span class="glyphicon glyphicon-exclamation-sign"></span> {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
                                                </li>
                                            </ul>
                                        </span>
                                    {% endif %}
                                </div>
                                <button class="btn btn-huge btn-info">{{ 'resetting.reset.submit'|trans }}</button>
                            </form>
                        </div>

                        <h6 class="p-t-30">Sign in</h6>
                        If you remember your credentials, <a href="{{ path('fos_user_security_login') }}">log in</a>.
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}